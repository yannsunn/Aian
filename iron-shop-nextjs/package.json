{
  "name": "iron-shop-nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "analyze": "cross-env ANALYZE=true next build",
    "pre-commit": "lefthook run pre-commit",
    "prepare": "lefthook install",
    "clean": "rm -rf .next out dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "size": "size-limit",
    "size:analyze": "size-limit --why",
    "bundlesize": "bundlesize",
    "perf:audit": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "perf:budget": "node scripts/check-performance-budget.js"
  },
  "dependencies": {
    "next": "15.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.1",
    "eslint": "^9.17.0",
    "eslint-config-next": "15.3.3",
    "tailwindcss": "^3.4.17",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.1",
    "typescript": "^5.7.2",
    "cross-env": "^7.0.3",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "lefthook": "^1.9.1",
    "@next/bundle-analyzer": "^15.3.3",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "vitest": "^2.1.8",
    "@vitejs/plugin-react": "^4.3.4",
    "@testing-library/react": "^16.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^25.0.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "zod": "^3.24.1",
    "@sentry/nextjs": "^8.44.0",
    "winston": "^3.17.0",
    "bundlesize": "^0.18.2",
    "size-limit": "^11.1.6",
    "@size-limit/preset-app": "^11.1.6"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  }
}