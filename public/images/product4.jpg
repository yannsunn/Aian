<svg width="800" height="800" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="productBg4" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f8fafc;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="lampSteel" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0f172a;stop-opacity:1" />
      <stop offset="30%" style="stop-color:#1e293b;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#334155;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#475569;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="lightGlow" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#fbbf24;stop-opacity:0.8" />
      <stop offset="50%" style="stop-color:#f59e0b;stop-opacity:0.4" />
      <stop offset="100%" style="stop-color:#ffffff;stop-opacity:0" />
    </radialGradient>
    <filter id="prodShadow4" x="-50%" y="-50%" width="200%" height="200%">
      <feDropShadow dx="8" dy="12" stdDeviation="10" flood-color="#000000" flood-opacity="0.1"/>
    </filter>
    <filter id="glow" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur stdDeviation="5"/>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="800" fill="url(#productBg4)"/>
  
  <!-- Minimal Desk Lamp -->
  <g transform="translate(300,200)" filter="url(#prodShadow4)">
    
    <!-- Base -->
    <ellipse cx="100" cy="450" rx="80" ry="25" fill="url(#lampSteel)"/>
    <circle cx="100" cy="450" r="60" fill="url(#lampSteel)"/>
    <circle cx="100" cy="440" r="45" fill="#1e293b"/>
    <circle cx="100" cy="435" r="30" fill="#334155"/>
    
    <!-- Base details -->
    <circle cx="100" cy="435" r="20" fill="none" stroke="#64748b" stroke-width="2"/>
    <circle cx="100" cy="435" r="5" fill="#94a3b8"/>
    
    <!-- Main arm -->
    <rect x="95" y="200" width="10" height="250" fill="url(#lampSteel)" rx="5"/>
    
    <!-- Adjustable joint -->
    <circle cx="100" cy="200" r="15" fill="url(#lampSteel)"/>
    <circle cx="100" cy="200" r="10" fill="#1e293b"/>
    <circle cx="100" cy="200" r="3" fill="#94a3b8"/>
    
    <!-- Upper arm -->
    <g transform="rotate(-45 100 200)">
      <rect x="95" y="50" width="10" height="150" fill="url(#lampSteel)" rx="5"/>
    </g>
    
    <!-- Head joint -->
    <circle cx="45" cy="95" r="12" fill="url(#lampSteel)"/>
    <circle cx="45" cy="95" r="8" fill="#1e293b"/>
    
    <!-- Lamp head -->
    <g transform="translate(45,95) rotate(-30)">
      <ellipse cx="0" cy="-30" rx="40" ry="25" fill="url(#lampSteel)"/>
      <ellipse cx="0" cy="-35" rx="35" ry="20" fill="#1e293b"/>
      <ellipse cx="0" cy="-35" rx="30" ry="15" fill="#334155"/>
      
      <!-- Inner light -->
      <ellipse cx="0" cy="-35" rx="25" ry="12" fill="#fbbf24"/>
      <ellipse cx="0" cy="-35" rx="20" ry="10" fill="#ffffff" opacity="0.8"/>
    </g>
    
    <!-- Light beam -->
    <g transform="translate(45,95) rotate(-30)">
      <ellipse cx="20" cy="50" rx="80" ry="40" fill="url(#lightGlow)" filter="url(#glow)"/>
      <ellipse cx="30" cy="80" rx="120" ry="60" fill="url(#lightGlow)" opacity="0.3"/>
    </g>
    
    <!-- Cable -->
    <path d="M85,440 Q70,460 60,480 Q50,500 45,520 Q40,540 50,560" 
          fill="none" stroke="#1e293b" stroke-width="4" stroke-linecap="round"/>
    
    <!-- Switch -->
    <rect x="90" y="320" width="20" height="8" fill="#94a3b8" rx="4"/>
    <circle cx="95" cy="324" r="2" fill="#fbbf24"/>
    
    <!-- Modern details -->
    <rect x="98" y="380" width="4" height="60" fill="#64748b" rx="1"/>
    <rect x="98" y="250" width="4" height="60" fill="#64748b" rx="1"/>
    
    <!-- Brand marking -->
    <g transform="translate(70,460)">
      <rect x="0" y="0" width="60" height="15" fill="#334155" rx="3"/>
      <text x="30" y="10" text-anchor="middle" font-family="system-ui, sans-serif" font-size="8" fill="#94a3b8">
        MINIMAL
      </text>
    </g>
    
    <!-- Illuminated desk surface -->
    <ellipse cx="100" cy="250" rx="150" ry="80" fill="#fbbf24" opacity="0.1"/>
    <ellipse cx="120" cy="280" rx="200" ry="100" fill="#f59e0b" opacity="0.05"/>
    
    <!-- Desktop items in light -->
    <!-- Notebook -->
    <g transform="translate(50,200)">
      <rect x="0" y="0" width="40" height="60" fill="#f8fafc" rx="2"/>
      <rect x="0" y="0" width="40" height="10" fill="#e2e8f0" rx="2"/>
      <line x1="5" y1="20" x2="35" y2="20" stroke="#cbd5e1" stroke-width="1"/>
      <line x1="5" y1="30" x2="30" y2="30" stroke="#cbd5e1" stroke-width="1"/>
      <line x1="5" y1="40" x2="35" y2="40" stroke="#cbd5e1" stroke-width="1"/>
    </g>
    
    <!-- Pen -->
    <rect x="100" y="220" width="2" height="30" fill="#1e293b" rx="1"/>
    <rect x="100" y="220" width="2" height="5" fill="#dc2626" rx="1"/>
    
    <!-- Metal reflections -->
    <rect x="97" y="202" width="2" height="246" fill="#94a3b8" opacity="0.6" rx="1"/>
    <circle cx="100" cy="200" r="6" fill="#cbd5e1" opacity="0.4"/>
  </g>
  
  <!-- Product label -->
  <g transform="translate(50,650)">
    <rect x="0" y="0" width="160" height="60" fill="#1e293b" rx="8"/>
    <text x="80" y="25" text-anchor="middle" font-family="system-ui, sans-serif" font-size="14" fill="white" font-weight="bold">
      ミニマル
    </text>
    <text x="80" y="45" text-anchor="middle" font-family="system-ui, sans-serif" font-size="12" fill="#94a3b8">
      デスクランプ
    </text>
  </g>
  
  <!-- Soft shadow -->
  <ellipse cx="400" cy="750" rx="250" ry="20" fill="#000000" opacity="0.05"/>
</svg>