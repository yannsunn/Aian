<svg width="1200" height="800" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="shelfGrad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f8fafc;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#e2e8f0;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#cbd5e1;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="ironGrad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e293b;stop-opacity:1" />
      <stop offset="30%" style="stop-color:#334155;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#475569;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#64748b;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow1" x="-50%" y="-50%" width="200%" height="200%">
      <feDropShadow dx="8" dy="12" stdDeviation="8" flood-color="#000000" flood-opacity="0.15"/>
    </filter>
    <filter id="metalShine" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur stdDeviation="2"/>
      <feOffset dx="2" dy="2"/>
      <feComponentTransfer><feFuncA type="discrete" tableValues="0 .5 .8 1"/></feComponentTransfer>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="800" fill="url(#shelfGrad1)"/>
  
  <!-- Modern Steel Shelf Structure -->
  <g transform="translate(150,100)" filter="url(#shadow1)">
    <!-- Main vertical supports -->
    <rect x="0" y="0" width="25" height="600" fill="url(#ironGrad1)" rx="3"/>
    <rect x="875" y="0" width="25" height="600" fill="url(#ironGrad1)" rx="3"/>
    
    <!-- Horizontal shelves -->
    <!-- Top shelf -->
    <rect x="-10" y="0" width="920" height="20" fill="url(#ironGrad1)" rx="5"/>
    
    <!-- Second shelf -->
    <rect x="-10" y="150" width="920" height="20" fill="url(#ironGrad1)" rx="5"/>
    
    <!-- Third shelf -->
    <rect x="-10" y="300" width="920" height="20" fill="url(#ironGrad1)" rx="5"/>
    
    <!-- Fourth shelf -->
    <rect x="-10" y="450" width="920" height="20" fill="url(#ironGrad1)" rx="5"/>
    
    <!-- Bottom shelf -->
    <rect x="-10" y="580" width="920" height="20" fill="url(#ironGrad1)" rx="5"/>
    
    <!-- Diagonal support braces -->
    <line x1="25" y1="150" x2="875" y2="300" stroke="url(#ironGrad1)" stroke-width="8" stroke-linecap="round"/>
    <line x1="875" y1="150" x2="25" y2="300" stroke="url(#ironGrad1)" stroke-width="8" stroke-linecap="round"/>
    
    <!-- Metal shine highlights -->
    <rect x="2" y="2" width="8" height="596" fill="#94a3b8" opacity="0.6" rx="2" filter="url(#metalShine)"/>
    <rect x="877" y="2" width="8" height="596" fill="#94a3b8" opacity="0.6" rx="2" filter="url(#metalShine)"/>
    
    <!-- Shelf surface highlights -->
    <rect x="-8" y="2" width="916" height="4" fill="#94a3b8" opacity="0.6" rx="2"/>
    <rect x="-8" y="152" width="916" height="4" fill="#94a3b8" opacity="0.6" rx="2"/>
    <rect x="-8" y="302" width="916" height="4" fill="#94a3b8" opacity="0.6" rx="2"/>
    <rect x="-8" y="452" width="916" height="4" fill="#94a3b8" opacity="0.6" rx="2"/>
    <rect x="-8" y="582" width="916" height="4" fill="#94a3b8" opacity="0.6" rx="2"/>
  </g>
  
  <!-- Decorative Items on Shelves -->
  <!-- Books on second shelf -->
  <g transform="translate(200,240)">
    <rect x="0" y="0" width="15" height="80" fill="#7c3aed" rx="2"/>
    <rect x="20" y="0" width="15" height="80" fill="#dc2626" rx="2"/>
    <rect x="40" y="0" width="15" height="80" fill="#059669" rx="2"/>
    <rect x="60" y="0" width="15" height="80" fill="#0284c7" rx="2"/>
  </g>
  
  <!-- Decorative vase on third shelf -->
  <g transform="translate(400,350)">
    <ellipse cx="40" cy="80" rx="35" ry="15" fill="#475569"/>
    <rect x="30" y="20" width="20" height="60" fill="#6b7280" rx="10"/>
    <ellipse cx="40" cy="20" rx="12" ry="8" fill="#374151"/>
  </g>
  
  <!-- Modern sculpture on fourth shelf -->
  <g transform="translate(700,490)">
    <polygon points="0,50 25,0 50,50 25,80" fill="#1f2937"/>
    <circle cx="25" cy="25" r="8" fill="#374151"/>
  </g>
  
  <!-- Floor shadow -->
  <ellipse cx="600" cy="750" rx="450" ry="40" fill="#000000" opacity="0.1"/>
</svg>