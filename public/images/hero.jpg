<svg width="1920" height="1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="workshopBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0f172a;stop-opacity:1" />
      <stop offset="30%" style="stop-color:#1e293b;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#334155;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#475569;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="ironGlow" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ff4500;stop-opacity:0.8" />
      <stop offset="50%" style="stop-color:#ff6b35;stop-opacity:0.6" />
      <stop offset="100%" style="stop-color:#000000;stop-opacity:0" />
    </linearGradient>
    <linearGradient id="metalGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a1a;stop-opacity:1" />
      <stop offset="30%" style="stop-color:#2d2d2d;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#404040;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#525252;stop-opacity:1" />
    </linearGradient>
    <filter id="forgeFire" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur stdDeviation="8"/>
      <feOffset dx="0" dy="0"/>
    </filter>
    <filter id="metalShadow" x="-50%" y="-50%" width="200%" height="200%">
      <feDropShadow dx="4" dy="8" stdDeviation="6" flood-color="#000000" flood-opacity="0.4"/>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="1920" height="1080" fill="url(#workshopBg)"/>
  
  <!-- Workshop Interior -->
  <!-- Forge/Furnace on the left -->
  <g transform="translate(100,400)" filter="url(#metalShadow)">
    <rect x="0" y="0" width="200" height="300" fill="url(#metalGrad)" rx="10"/>
    <rect x="20" y="50" width="160" height="100" fill="#1a1a1a" rx="5"/>
    <!-- Forge fire glow -->
    <rect x="20" y="50" width="160" height="100" fill="url(#ironGlow)" filter="url(#forgeFire)"/>
    <!-- Chimney -->
    <rect x="80" y="-100" width="40" height="120" fill="url(#metalGrad)" rx="5"/>
  </g>
  
  <!-- Workbench with tools -->
  <g transform="translate(400,600)" filter="url(#metalShadow)">
    <rect x="0" y="0" width="400" height="40" fill="#8b4513" rx="5"/>
    <rect x="20" y="40" width="20" height="150" fill="url(#metalGrad)" rx="3"/>
    <rect x="360" y="40" width="20" height="150" fill="url(#metalGrad)" rx="3"/>
    
    <!-- Anvil on workbench -->
    <g transform="translate(150,-80)">
      <ellipse cx="50" cy="80" rx="45" ry="20" fill="url(#metalGrad)"/>
      <rect x="5" y="40" width="90" height="40" fill="url(#metalGrad)" rx="5"/>
      <rect x="30" y="0" width="40" height="40" fill="url(#metalGrad)" rx="20"/>
      <rect x="45" y="80" width="10" height="60" fill="url(#metalGrad)" rx="5"/>
    </g>
    
    <!-- Tools hanging -->
    <g transform="translate(50,-30)">
      <!-- Hammers -->
      <rect x="0" y="0" width="5" height="60" fill="#8b4513" rx="2"/>
      <rect x="-5" y="0" width="15" height="20" fill="url(#metalGrad)" rx="3"/>
      
      <rect x="20" y="0" width="5" height="70" fill="#8b4513" rx="2"/>
      <rect x="15" y="0" width="15" height="15" fill="url(#metalGrad)" rx="3"/>
      
      <!-- Tongs -->
      <rect x="50" y="0" width="3" height="50" fill="url(#metalGrad)" rx="1"/>
      <rect x="55" y="0" width="3" height="50" fill="url(#metalGrad)" rx="1"/>
      <circle cx="51.5" cy="5" r="3" fill="url(#metalGrad)"/>
      <circle cx="56.5" cy="5" r="3" fill="url(#metalGrad)"/>
    </g>
  </g>
  
  <!-- Large iron works display -->
  <!-- Decorative iron gate -->
  <g transform="translate(1200,300)" filter="url(#metalShadow)">
    <!-- Main frame -->
    <rect x="0" y="0" width="20" height="500" fill="url(#metalGrad)" rx="3"/>
    <rect x="300" y="0" width="20" height="500" fill="url(#metalGrad)" rx="3"/>
    <rect x="0" y="0" width="320" height="20" fill="url(#metalGrad)" rx="3"/>
    <rect x="0" y="480" width="320" height="20" fill="url(#metalGrad)" rx="3"/>
    
    <!-- Decorative scrollwork -->
    <g transform="translate(160,250)">
      <circle cx="0" cy="0" r="60" fill="none" stroke="url(#metalGrad)" stroke-width="8"/>
      <circle cx="0" cy="0" r="30" fill="none" stroke="url(#metalGrad)" stroke-width="6"/>
      <path d="M-40,0 Q-20,-20 0,0 Q20,-20 40,0" fill="none" stroke="url(#metalGrad)" stroke-width="6"/>
      <path d="M0,-40 Q20,-20 0,0 Q20,20 0,40" fill="none" stroke="url(#metalGrad)" stroke-width="6"/>
    </g>
    
    <!-- Vertical bars -->
    <rect x="60" y="20" width="8" height="460" fill="url(#metalGrad)" rx="4"/>
    <rect x="120" y="20" width="8" height="460" fill="url(#metalGrad)" rx="4"/>
    <rect x="192" y="20" width="8" height="460" fill="url(#metalGrad)" rx="4"/>
    <rect x="252" y="20" width="8" height="460" fill="url(#metalGrad)" rx="4"/>
  </g>
  
  <!-- Custom furniture pieces -->
  <!-- Industrial table -->
  <g transform="translate(800,700)" filter="url(#metalShadow)">
    <rect x="0" y="0" width="300" height="30" fill="#8b4513" rx="5"/>
    <rect x="20" y="30" width="15" height="120" fill="url(#metalGrad)" rx="3"/>
    <rect x="265" y="30" width="15" height="120" fill="url(#metalGrad)" rx="3"/>
    <!-- Cross brace -->
    <rect x="35" y="100" width="230" height="10" fill="url(#metalGrad)" rx="2"/>
  </g>
  
  <!-- Hanging pendant lights -->
  <g transform="translate(600,100)">
    <!-- Light fixture 1 -->
    <line x1="0" y1="0" x2="0" y2="150" stroke="url(#metalGrad)" stroke-width="3"/>
    <polygon points="-30,150 30,150 25,200 -25,200" fill="url(#metalGrad)"/>
    <circle cx="0" cy="175" r="15" fill="#ffeb3b" opacity="0.8"/>
    
    <!-- Light fixture 2 -->
    <line x1="200" y1="0" x2="200" y2="120" stroke="url(#metalGrad)" stroke-width="3"/>
    <polygon points="170,120 230,120 225,170 175,170" fill="url(#metalGrad)"/>
    <circle cx="200" cy="145" r="15" fill="#ffeb3b" opacity="0.6"/>
  </g>
  
  <!-- Workshop sparks and ambient lighting -->
  <g transform="translate(200,500)">
    <circle cx="0" cy="0" r="2" fill="#ff9800" opacity="0.9">
      <animate attributeName="opacity" values="0.9;0.3;0.9" dur="1.5s" repeatCount="indefinite"/>
    </circle>
    <circle cx="20" cy="-10" r="1.5" fill="#ff6b35" opacity="0.8">
      <animate attributeName="opacity" values="0.8;0.2;0.8" dur="1.8s" repeatCount="indefinite"/>
    </circle>
    <circle cx="-15" cy="5" r="1" fill="#ff5722" opacity="0.7">
      <animate attributeName="opacity" values="0.7;0.1;0.7" dur="2.1s" repeatCount="indefinite"/>
    </circle>
  </g>
  
  <!-- Dramatic lighting from forge -->
  <ellipse cx="200" cy="550" rx="300" ry="150" fill="url(#ironGlow)" opacity="0.3"/>
  <ellipse cx="600" cy="200" rx="400" ry="200" fill="#ffeb3b" opacity="0.1"/>
  
  <!-- Workshop floor reflection -->
  <rect x="0" y="1000" width="1920" height="80" fill="url(#metalGrad)" opacity="0.2"/>
  
  <!-- Atmospheric smoke -->
  <g transform="translate(200,300)" opacity="0.3">
    <ellipse cx="0" cy="0" rx="50" ry="200" fill="white" opacity="0.1">
      <animateTransform attributeName="transform" type="scale" values="1,1;1.2,1.1;1,1" dur="4s" repeatCount="indefinite"/>
    </ellipse>
    <ellipse cx="30" cy="-50" rx="40" ry="180" fill="white" opacity="0.08">
      <animateTransform attributeName="transform" type="scale" values="1,1;1.1,1.2;1,1" dur="3.5s" repeatCount="indefinite"/>
    </ellipse>
  </g>
</svg>