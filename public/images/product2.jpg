<svg width="800" height="800" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="productBg2" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fefefe;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f1f5f9;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="tableTopGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a1a;stop-opacity:1" />
      <stop offset="30%" style="stop-color:#2d2d2d;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#404040;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#525252;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="glassGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#e0f2fe;stop-opacity:0.3" />
      <stop offset="50%" style="stop-color:#b3e5fc;stop-opacity:0.2" />
      <stop offset="100%" style="stop-color:#81d4fa;stop-opacity:0.1" />
    </linearGradient>
    <filter id="prodShadow2" x="-50%" y="-50%" width="200%" height="200%">
      <feDropShadow dx="12" dy="20" stdDeviation="15" flood-color="#000000" flood-opacity="0.2"/>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="800" fill="url(#productBg2)"/>
  
  <!-- Modern Coffee Table -->
  <g transform="translate(100,250)" filter="url(#prodShadow2)">
    
    <!-- Glass top surface -->
    <ellipse cx="300" cy="150" rx="280" ry="120" fill="url(#glassGrad)"/>
    <ellipse cx="300" cy="150" rx="275" ry="115" fill="none" stroke="#b3e5fc" stroke-width="2" opacity="0.5"/>
    
    <!-- Steel frame base -->
    <ellipse cx="300" cy="200" rx="250" ry="100" fill="url(#tableTopGrad)"/>
    <rect x="50" y="150" width="500" height="50" fill="url(#tableTopGrad)" rx="25"/>
    
    <!-- Cross beam structure -->
    <rect x="80" y="175" width="440" height="15" fill="url(#tableTopGrad)" rx="3"/>
    <rect x="290" y="80" width="20" height="140" fill="url(#tableTopGrad)" rx="3"/>
    
    <!-- Stylish legs -->
    <g transform="translate(150,200)">
      <!-- Left leg -->
      <path d="M0,0 L-40,150 L-30,150 L10,0 Z" fill="url(#tableTopGrad)"/>
      <rect x="-5" y="0" width="10" height="20" fill="url(#tableTopGrad)" rx="5"/>
    </g>
    
    <g transform="translate(450,200)">
      <!-- Right leg -->
      <path d="M0,0 L40,150 L30,150 L-10,0 Z" fill="url(#tableTopGrad)"/>
      <rect x="-5" y="0" width="10" height="20" fill="url(#tableTopGrad)" rx="5"/>
    </g>
    
    <!-- Center support -->
    <rect x="290" y="220" width="20" height="130" fill="url(#tableTopGrad)" rx="3"/>
    <ellipse cx="300" cy="365" rx="25" ry="8" fill="url(#tableTopGrad)"/>
    
    <!-- Glass surface reflection -->
    <ellipse cx="250" cy="120" rx="150" ry="60" fill="white" opacity="0.15"/>
    <ellipse cx="350" cy="130" rx="100" ry="40" fill="white" opacity="0.1"/>
    
    <!-- Decorative items on table -->
    <!-- Modern vase -->
    <g transform="translate(200,100)">
      <ellipse cx="0" cy="40" rx="20" ry="8" fill="#6b7280"/>
      <rect x="-15" y="10" width="30" height="30" fill="#9ca3af" rx="15"/>
      <ellipse cx="0" cy="10" rx="12" ry="6" fill="#374151"/>
      <!-- Minimalist flowers -->
      <circle cx="-5" cy="0" r="3" fill="#ef4444"/>
      <circle cx="5" cy="-3" r="3" fill="#ef4444"/>
      <circle cx="0" cy="-5" r="3" fill="#ef4444"/>
    </g>
    
    <!-- Coffee cup -->
    <g transform="translate(380,120)">
      <ellipse cx="0" cy="15" rx="12" ry="6" fill="#8b4513"/>
      <rect x="-12" y="0" width="24" height="15" fill="#a0522d" rx="12"/>
      <rect x="10" y="5" width="8" height="3" fill="#a0522d" rx="1"/>
      <!-- Steam -->
      <path d="M-5,-8 Q-3,-15 -1,-10 Q1,-18 3,-12" 
            fill="none" stroke="white" stroke-width="1" opacity="0.6"/>
    </g>
    
    <!-- Modern book -->
    <g transform="translate(120,130)">
      <rect x="0" y="0" width="60" height="8" fill="#1e293b" rx="2"/>
      <rect x="2" y="-2" width="56" height="6" fill="#334155" rx="1"/>
      <text x="30" y="2" text-anchor="middle" font-family="system-ui, sans-serif" font-size="4" fill="white">DESIGN</text>
    </g>
    
    <!-- Metal shine effects -->
    <rect x="75" y="177" width="450" height="3" fill="#94a3b8" opacity="0.8" rx="1"/>
    <rect x="292" y="82" width="6" height="136" fill="#94a3b8" opacity="0.6" rx="2"/>
  </g>
  
  <!-- Product label -->
  <g transform="translate(50,650)">
    <rect x="0" y="0" width="180" height="60" fill="#1f2937" rx="8"/>
    <text x="90" y="25" text-anchor="middle" font-family="system-ui, sans-serif" font-size="14" fill="white" font-weight="bold">
      モダン
    </text>
    <text x="90" y="45" text-anchor="middle" font-family="system-ui, sans-serif" font-size="12" fill="#9ca3af">
      コーヒーテーブル
    </text>
  </g>
  
  <!-- Floor reflection -->
  <ellipse cx="400" cy="750" rx="350" ry="30" fill="#000000" opacity="0.08"/>
</svg>