<svg width="800" height="800" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="productBg1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f8fafc;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e2e8f0;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="steelGrad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a1a;stop-opacity:1" />
      <stop offset="30%" style="stop-color:#2d2d2d;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#404040;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#525252;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="woodGrad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8b4513;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#a0522d;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#cd853f;stop-opacity:1" />
    </linearGradient>
    <filter id="prodShadow1" x="-50%" y="-50%" width="200%" height="200%">
      <feDropShadow dx="8" dy="15" stdDeviation="12" flood-color="#000000" flood-opacity="0.15"/>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="800" fill="url(#productBg1)"/>
  
  <!-- Industrial Bookshelf -->
  <g transform="translate(150,100)" filter="url(#prodShadow1)">
    
    <!-- Main steel frame -->
    <rect x="0" y="0" width="20" height="600" fill="url(#steelGrad1)" rx="3"/>
    <rect x="480" y="0" width="20" height="600" fill="url(#steelGrad1)" rx="3"/>
    
    <!-- Wood shelves (5 levels) -->
    <rect x="20" y="0" width="460" height="40" fill="url(#woodGrad1)" rx="5"/>
    <rect x="20" y="140" width="460" height="40" fill="url(#woodGrad1)" rx="5"/>
    <rect x="20" y="280" width="460" height="40" fill="url(#woodGrad1)" rx="5"/>
    <rect x="20" y="420" width="460" height="40" fill="url(#woodGrad1)" rx="5"/>
    <rect x="20" y="560" width="460" height="40" fill="url(#woodGrad1)" rx="5"/>
    
    <!-- Wood grain detail -->
    <rect x="25" y="5" width="450" height="8" fill="#654321" opacity="0.3" rx="2"/>
    <rect x="25" y="145" width="450" height="8" fill="#654321" opacity="0.3" rx="2"/>
    <rect x="25" y="285" width="450" height="8" fill="#654321" opacity="0.3" rx="2"/>
    <rect x="25" y="425" width="450" height="8" fill="#654321" opacity="0.3" rx="2"/>
    <rect x="25" y="565" width="450" height="8" fill="#654321" opacity="0.3" rx="2"/>
    
    <!-- Steel brackets -->
    <rect x="15" y="35" width="30" height="10" fill="url(#steelGrad1)" rx="2"/>
    <rect x="455" y="35" width="30" height="10" fill="url(#steelGrad1)" rx="2"/>
    <rect x="15" y="175" width="30" height="10" fill="url(#steelGrad1)" rx="2"/>
    <rect x="455" y="175" width="30" height="10" fill="url(#steelGrad1)" rx="2"/>
    <rect x="15" y="315" width="30" height="10" fill="url(#steelGrad1)" rx="2"/>
    <rect x="455" y="315" width="30" height="10" fill="url(#steelGrad1)" rx="2"/>
    <rect x="15" y="455" width="30" height="10" fill="url(#steelGrad1)" rx="2"/>
    <rect x="455" y="455" width="30" height="10" fill="url(#steelGrad1)" rx="2"/>
    
    <!-- Cross braces -->
    <rect x="10" y="200" width="480" height="8" fill="url(#steelGrad1)" rx="2"/>
    <rect x="10" y="400" width="480" height="8" fill="url(#steelGrad1)" rx="2"/>
    
    <!-- Books on shelves -->
    <!-- Top shelf books -->
    <g transform="translate(40,45)">
      <rect x="0" y="0" width="15" height="90" fill="#dc2626" rx="2"/>
      <rect x="18" y="0" width="15" height="90" fill="#2563eb" rx="2"/>
      <rect x="36" y="0" width="15" height="90" fill="#16a34a" rx="2"/>
      <rect x="54" y="0" width="15" height="90" fill="#ca8a04" rx="2"/>
      <rect x="72" y="0" width="15" height="90" fill="#9333ea" rx="2"/>
    </g>
    
    <!-- Second shelf items -->
    <g transform="translate(200,180)">
      <rect x="0" y="0" width="80" height="50" fill="#4b5563" rx="4"/>
      <rect x="90" y="0" width="80" height="50" fill="#6b7280" rx="4"/>
      <text x="40" y="28" text-anchor="middle" font-family="system-ui, sans-serif" font-size="8" fill="white">BOX</text>
      <text x="130" y="28" text-anchor="middle" font-family="system-ui, sans-serif" font-size="8" fill="white">FILE</text>
    </g>
    
    <!-- Decorative plant -->
    <g transform="translate(350,320)">
      <ellipse cx="40" cy="60" rx="35" ry="15" fill="#8b4513"/>
      <rect x="25" y="30" width="30" height="30" fill="#dc2626" rx="15"/>
      <path d="M40,10 Q30,20 35,35 Q45,25 50,35 Q55,20 45,10" fill="#16a34a"/>
    </g>
    
    <!-- Metal shine effects -->
    <rect x="2" y="2" width="6" height="596" fill="#94a3b8" opacity="0.6" rx="2"/>
    <rect x="482" y="2" width="6" height="596" fill="#94a3b8" opacity="0.6" rx="2"/>
  </g>
  
  <!-- Product label -->
  <g transform="translate(550,650)">
    <rect x="0" y="0" width="200" height="60" fill="#1f2937" rx="8"/>
    <text x="100" y="25" text-anchor="middle" font-family="system-ui, sans-serif" font-size="14" fill="white" font-weight="bold">
      インダストリアル
    </text>
    <text x="100" y="45" text-anchor="middle" font-family="system-ui, sans-serif" font-size="12" fill="#9ca3af">
      ブックシェルフ
    </text>
  </g>
  
  <!-- Floor shadow -->
  <ellipse cx="400" cy="750" rx="300" ry="25" fill="#000000" opacity="0.1"/>
</svg>